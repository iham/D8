{
	"name": "D8 Node.js & Angular project",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "sudo npm install -g @angular/cli --quiet --silent",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.live-server",
				"glenn2223.live-sass",
				"EditorConfig.EditorConfig",
				"CelianRiboulet.webvalidator",
				"IronGeek.vscode-env",
				"formulahendry.auto-rename-tag"
			],
			"settings": {}
		}
	},
  	"remoteUser": "node"
}
